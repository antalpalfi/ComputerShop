<Window x:Class="ComputerShop.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerShop"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key = "TriggerStyle" TargetType = "Button">
            <Setter Property = "Foreground" Value = "Blue" />
            <Style.Triggers>
                <Trigger Property = "IsMouseOver" Value = "True">
                    <Setter Property = "Foreground" Value = "Green" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="Main Menu" FontSize="40" TextAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="Data management" Height="40" Width="140" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
                    <Button Content="Data management" Height="40" Width="140" Foreground="Black" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
